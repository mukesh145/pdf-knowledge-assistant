{
  "family": "pdf-knowledge-assistant-td-api",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/pdf-knowledge-assistant-exec-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/pdf-knowledge-assistant-task-role",
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX",
    "cpuArchitecture": "ARM64"
  },
  "ephemeralStorage": {
    "sizeInGiB": 21
  },
  "containerDefinitions": [
    {
      "name": "pdf-knowledge-assistant-api",
      "image": "PLACEHOLDER_IMAGE_URI",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_NAME",
          "value": "pdf_knowledge_db"
        },
        {
          "name": "PINECONE_INDEX_NAME",
          "value": "test"
        },
        {
          "name": "PINECONE_ENVIRONMENT",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/pdf-knowledge-assistant/db-host"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/pdf-knowledge-assistant/db-user"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pdf-knowledge-assistant-secrets:DB_PASSWORD::"
        },
        {
          "name": "JWT_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pdf-knowledge-assistant-secrets:JWT_SECRET_KEY::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pdf-knowledge-assistant-secrets:OPENAI_API_KEY::"
        },
        {
          "name": "PINECONE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pdf-knowledge-assistant-secrets:PINECONE_API_KEY::"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/pdf-knowledge-assistant/allowed-origins"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pdf-knowledge-assistant-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "pdf-knowledge-assistant-api"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -sf http://localhost:8000/api/health || exit 1"],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      }
    }
  ]
}

